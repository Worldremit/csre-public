{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "project": {
      "type": "string",
      "defaultValue": "dlbs",
      "metadata": {
        "description": "What project or service this relates to. E.g., mercury, mobile API, etc.  Limit this to 5 characters based on naming conventions.",
        "minLength": 1,
        "maxLength": 5
      }
    },
    "numberOfInstances": {
      "type": "int",
      "defaultValue": 2,
      "minValue": 2,
      "maxValue": 5,
      "metadata": {
        "description": "Number of VMs to deploy, limit 5 since this sample is using a single storage account"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "tst",
      "allowedValues": [
        "tst"
      ],
      "metadata": {
        "description": "Environments for deployment."
      }
    },
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_DS1_v2",
      "metadata": {
        "description": "Size of the VM"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "Worldremit@1",
      "metadata": {
        "description": "Password for admin user"
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "remoteadmin",
      "metadata": {
        "description": "Admin username for vm"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/16",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "subnetsarray": {
      "type": "array",
      "defaultValue": [
        {
          "name": "sub1",
          "addressPrefix": "10.0.1.0/24"
        },
        {
          "name": "sub2",
          "addressPrefix": "10.0.2.0/24"
        }
      ]
    },
    "subnet1Prefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/24",
      "metadata": {
        "description": "Subnet 1 Prefix"
      }
    },
    "subnet2Prefix": {
      "type": "string",
      "defaultValue": "10.0.1.0/24",
      "metadata": {
        "description": "Subnet 2 Prefix"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {
        "OwnerContact": "csre-team@worldremit.com",
        "Team": "CSRE",
        "Project": "CSRE-devlab - Build",
        "RunModel": "247"
      }
    }
  },
  "variables": {
    //"vmname": "[toLower(concat(parameters('project'),copyIndex(),'-vm','-wr'))]",
    "vnetname": "[toLower(concat(parameters('project'),'-vnet-',parameters('environment'),'-wr'))]",
    "availabilitySetName": "[toLower(concat(parameters('project'),'-avl-',parameters('environment'),'-wr'))]",
    // "subnet1Name": "[toLower(concat(parameters('project'),'01-subnet-',parameters('environment'),'-wr'))]",
    // "subnetName": "[toLower(concat(parameters('project'),copyIndex(),'-subnet-',parameters('environment'),'-wr'))]",
    // "subnet2Name": "[toLower(concat(parameters('project'),'02-subnet-',parameters('environment'),'-wr'))]",
    // "vmnic": "[toLower(concat(parameters('project'),'-nic',copyIndex(),'-',parameters('environment'),'-wr'))]",
    "nsgid01": "[resourceId('Microsoft.Network/networkSecurityGroups', 'Devlabs01-nsg')]",
    "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetname'))]",
    "snetRef-01": "[concat(variables('vnetId'), '/subnets/', 'subnet1')]",

    //"subnetRef": "[concat(resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetname')), toLower(concat(parameters('project'),copyIndex(),'-subnet-',parameters('environment'),'-wr')))]",
    "publicIPAddressName": "[toLower(concat(parameters('project'),'-pip1-',parameters('environment'),'-wr'))]",
    "subnetName": "subnet0",
    "subnetModName": "[substring(variables('subnetName'),0,sub(length(variables('subnetName')), 1))]",
    "SeperatedValues": "[split(parameters('vnetAddressPrefix'),'.')]",
    "subnets": "[parameters('subnetsarray')]"
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('vnetName')]",
      "tags": "[parameters('tags')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Devlabs01-nsg"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressPrefix')]"
          ]
        },
        "subnets": []
      }
    },
    {
      "apiVersion": "2017-08-01",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "name": "[concat(variables('vnetname'),'/',variables('subnetModName'),copyindex(1))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressPrefix": "[concat(variables('SeperatedValues')[0],'.',variables('SeperatedValues')[1],'.', copyIndex(1),'.0/24')]"
      },
      "copy": {
        "name": "subnetCount",
        "count": 2,
        "mode": "Serial",
        "batchSize": 1
      },
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('vnetname'))]"
      ]
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "Devlabs01-nsg",
      "tags": "[parameters('tags')]",
      "location": "[resourceGroup().location]",
      "apiVersion": "2018-03-01",
      "properties": {
        "securityRules": [
          {
            "name": "SSH",
            "properties": {
              "description": "Allows SSH traffic",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "name": "[toLower(concat(parameters('project'),'-nic',copyIndex(),'-',parameters('environment'),'-wr'))]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2017-10-01",
      "dependsOn": [
        //"[concat('Microsoft.Network/publicIPAddresses/', variables('publicIPAddressName'))]",
        "subnetCount",
        "[variables('vnetName')]"
      ],
      "copy": {
        "name": "nicLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id":"[concat(variables('vnetId'), '/subnets/', variables('subnetModName'),copyindex(1))]",
               //"id": "[variables('snetRef-01')]"
               
              },
              "privateIPAllocationMethod": "Dynamic",
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[variables('nsgid01')]"
        }
      }
    },
    {
      "name": "[toLower(concat(parameters('project'),copyIndex(),'-vm','-wr'))]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "tags": "[parameters('tags')]",
      "copy": {
        "name": "virtualMachineLoop",
        "count": "[parameters('numberOfInstances')]"
      },
      "dependsOn": [
        "nicLoop",
        "[variables('availabilitySetName')]"
      ],
      "properties": {
        "osProfile": {
          "computerName": "[toLower(concat(parameters('project'),copyIndex(),'-vm','-wr'))]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": "true"
          },
        },
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2016-Datacenter",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "fromImage",
            "name": "[toLower(concat(parameters('project'),'-disk', copyIndex(),'-md-',parameters('environment'),'-wr'))]",
            "managedDisk": {
              "storageAccountType": "Standard_LRS"
            }
          },
          
          "dataDisks": []
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('availabilitySetName'))]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces/',toLower(concat(parameters('project'),'-nic',copyIndex(),'-',parameters('environment'),'-wr')))]"
            }
          ]
        }
      },
      "resources": []
    },
    
    {
      "apiVersion": "2017-10-01",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('publicIPAddressName')]",
      "tags": "[parameters('tags')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
      }
    },
    {
      "name": "[variables('availabilitySetName')]",
      "type": "Microsoft.Compute/availabilitySets",
      "tags": "[parameters('tags')]",
      "apiVersion": "2017-12-01",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "platformFaultDomainCount": "2",
        "platformUpdateDomainCount": "2"
      },
      "sku": {
        "name": "Aligned"
      }
    }
  ]
}